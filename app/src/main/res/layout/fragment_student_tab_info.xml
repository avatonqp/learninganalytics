<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_student_tab_username"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="username"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_email"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="email"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_first_name"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="first name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_last_name"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="last name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_fathersname"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="father's name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_AM"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="AM"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_born_date"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="borndate"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text_view_student_tab_phone"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/inputs"
            android:padding="14dp"
            android:text="phone"
            android:textColor="#000000" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>