<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1dp"
                android:bottomRightRadius="15dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="15dp" android:topRightRadius="0dp"/>
            <stroke android:width="2dp" android:color="@color/theBrown"/>
            <size android:height="40dp" android:width="200dp"/>
            <gradient
                android:angle="45"
                android:endColor="@color/theLight"
                android:startColor="@color/theDark"
                android:type="linear" />
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <corners android:radius="1dp"
                android:bottomRightRadius="15dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="15dp" android:topRightRadius="0dp"/>
            <stroke android:width="2dp" android:color="@android:color/white"/>
            <size android:height="40dp" android:width="200dp"/>
            <gradient
                android:angle="45"
                android:endColor="@color/theLight"
                android:startColor="@color/theDark"
                android:type="linear" />
        </shape>
    </item>


</selector>